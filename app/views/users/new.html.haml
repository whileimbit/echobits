- if @user.errors.any?
	%ul
	= @user.errors.full_messages.each do |msg|
		%li= msg
= form_for @user, :url => signup_path, :validate => true do |f|
	= f.text_field :login, placeholder: "username"
	= f.text_field :email, placeholder: "email"
	= f.password_field :password, placeholder: "password"
	= f.password_field :password_confirmation, placeholder: "password (repeat)"
	= f.submit "Signup", disable_with: 'Submiting...'